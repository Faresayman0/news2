<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/news_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="8dp">

        <Button
            android:id="@+id/btnGeneral"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GENERAL"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnBusiness"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="BUSINESS"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnEntertainment"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ENTERTAINMENT"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnHealth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="HEALTH"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnScience"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="SCIENCE"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSports"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="SPORTS"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnTechnology"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="TECHNOLOGY"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
